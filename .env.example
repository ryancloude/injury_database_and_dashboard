# =========================
# Local Postgres (Docker)
# =========================
LOCAL_PG_USER=changeme           # local Postgres username
LOCAL_PG_PASSWORD=changeme    # local Postgres password
LOCAL_PG_DSN=postgresql+psycopg2://changeme:changeme@db:5432/baseball
LOCAL_READONLY_PG_DSN=postgresql+psycopg2://app_reader:changeme@db:5432/baseball
AIRFLOW_URL=postgresql+psycopg2://changeme:changeme@db:5432/airflow

# =========================
# AWS RDS (baseball & airflow)
# =========================
AWS_PG_HOST=your-rds-endpoint.your-region.rds.amazonaws.com
AWS_PG_USER=changeme
AWS_PG_PASSWORD=changeme
AWS_PG_DSN=postgresql+psycopg2://postgres:changeme@your-rds-endpoint.your-region.rds.amazonaws.com:5432/baseball?sslmode=require
AWS_READONLY_PG_DSN=postgresql+psycopg2://app_reader:changeme@your-rds-endpoint.your-region.rds.amazonaws.com:5432/baseball?sslmode=require

# Airflow metadata DB (when using RDS for Airflow locally, optional)
# AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow_user:changeme@your-rds-endpoint.us-east-2.rds.amazonaws.com:5432/airflow?sslmode=require

# =========================
# Environment switching
# =========================
# local  -> DockerOperator hitting local Postgres
# aws    -> EcsRunTaskOperator hitting ECS + RDS
APP_ENV=aws

AWS_REGION=your-region
AWS_DEFAULT_REGION=your-region

# =========================
# Docker / dbt / Airflow UID
# =========================
DBT_IMAGE=injury_dbt:latest
AIRFLOW_UID=50000

# =========================
# ECS / ECSRunTaskOperator config
# =========================
ECS_CLUSTER=injury-pipeline-cluster

# Comma-separated subnet IDs (private subnets in your VPC)
ECS_SUBNETS=subnet-xxxxxxxx,subnet-yyyyyyyy

# Comma-separated security group IDs (for ECS tasks)
ECS_SECURITY_GROUPS=sg-xxxxxxxxxxxxxx

# Pipeline task definition & logging
ECS_PIPELINE_TASK_DEF=injury-pipeline
ECS_PIPELINE_CONTAINER_NAME=pipeline
ECS_LOG_GROUP=/ecs/injury-pipeline
ECS_LOG_REGION=your-region
ECS_LOG_STREAM_PREFIX=pipeline

# dbt task definition
ECS_DBT_TASK_DEF=injury-dbt
ECS_DBT_CONTAINER_NAME=dbt

# =========================
# AWS credentials (local ONLY)
# =========================
# Used so local Airflow (in Docker) can call ECS via EcsRunTaskOperator.
# DO NOT commit real values; keep only placeholders in this example file.
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY